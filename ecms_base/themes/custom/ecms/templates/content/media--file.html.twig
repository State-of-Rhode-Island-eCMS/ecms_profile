{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 * - file_type_icon: name of icon
 * - file_type_readable: readable file type name
 * - file_url: absolute link of file location
 * - file_size: array of file size information
 *   - amount: string of file size without unit.
 *   - short_format: short format of unit.
 *   - long_format: long format of unit.
 * - view_mode: View mode; for example, "preview" or "full".
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}

{% include "@molecules/file/file.twig" with {
    name: file_title,
    file_type_icon: file_type_icon,
    file_type_readable: file_type_readable,
    file_url: '/media/' ~ media.id() ~ '/download?language=' ~ langcode,
    file_size: file_size,
    link_behavior: link_behavior,
    file_description: file_description
  }
%}
