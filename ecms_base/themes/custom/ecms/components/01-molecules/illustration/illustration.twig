{% if illustration or illustration != 'none' %}
  <div class="footer-illustration">
  {% if illustration starts with 'random:' %}
    {# Remove random prefix #}
    {% set filenameList = illustration|slice(7) %}

    {# Explode string #}
    {% set filenameArray = filenameList|split(', ') %}

    {% if filenameArray|length %}
      {# Get random number #}
      {% set randomKey = random(1, filenameArray|length) %}
      {% set zeroBasedKey = randomKey - 1 %}

      {# Print out SVG #}
      {{ source('@ecms/assets/images/illustrations/' ~ filenameArray[zeroBasedKey]) }}
    {% endif %}
  {% else %}
    {{ source('@ecms/assets/images/illustrations/' ~ illustration) }}
  {% endif %}
  </div>
{% endif %}
