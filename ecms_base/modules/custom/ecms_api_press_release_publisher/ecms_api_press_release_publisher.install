<?php

/**
 * @file
 * Adds the site host as a press release topic term.
 */

declare(strict_types = 1);

/**
 * Implements hook_install().
 */
function ecms_api_press_release_publisher_install(): void {
  \Drupal::service('ecms_api_press_release_publisher.press_release_manager')
    ->createSiteSourceTerm();
}
